<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/Framework/App/Manifest/Schema/manifest-1.0.xsd">
    <meta>
        <name>DPD</name>
        <label>DPD</label>
        <description>BitBag Shopware app for DPD</description>
        <author>BitBag</author>
        <copyright>(c) by BitBag</copyright>
        <version>1.0.0</version>
        <license>MIT</license>
    </meta>

    <setup>
        <registrationUrl>http://example-app/app/registration</registrationUrl>
        <secret>myAppSecret</secret>
    </setup>

    <permissions>
        <create>shipping_method</create>
        <read>shipping_method</read>
        <update>shipping_method</update>
        <create>delivery_time</create>
        <read>delivery_time</read>
        <read>order</read>
        <read>order_delivery</read>
        <read>order_address</read>
        <read>order_line_item</read>
        <read>product</read>
        <read>rule</read>
    </permissions>

    <custom-fields>
        <custom-field-set>
            <name>dpd_configurator</name>
            <label>DPD Custom fields set</label>
            <related-entities>
                <order/>
            </related-entities>
            <fields>
                <int name="dpd_package_height">
                    <position>1</position>
                    <label>Height</label>
                </int>
                <int name="dpd_package_width">
                    <position>2</position>
                    <label>Width</label>
                </int>
                <int name="dpd_package_depth">
                    <position>3</position>
                    <label>Depth</label>
                </int>
                <text name="dpd_package_countryCode">
                    <position>4</position>
                    <label>Sender country code</label>
                </text>
                <text name="dpd_package_description">
                    <position>5</position>
                    <label>Description</label>
                </text>
            </fields>
        </custom-field-set>
    </custom-fields>

    <admin>
        <action-button action="getLabel" entity="order" view="detail" url="http://example-app/app/send-order">
            <label>Get shipping label</label>
        </action-button>

        <module name="dpd_configuration"
                source="http://localhost:7777/app/modules/configuration"
                parent="sw-settings"
        >
            <label>Configuration</label>
        </module>
    </admin>

    <webhooks>
        <!--  https://developer.shopware.com/docs/guides/plugins/apps/app-base-guide#webhooks-->
        <webhook name="appLifecycleDeleted" url="http://example-app/app/lifecycle/deleted" event="app.deleted"/>
        <webhook name="appLifecycleActivated" url="http://example-app/app/lifecycle/activated" event="app.activated"/>
    </webhooks>
</manifest>
