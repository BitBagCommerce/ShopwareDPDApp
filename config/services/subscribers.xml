<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service class="BitBag\ShopwareDpdApp\EventSubscriber\AppActivatedEventSubscriber"
                 id="bitbag.shopware_dpd_app.event_subscriber.app_activated_subscriber"
        >
            <argument type="service" id="bitbag.shopware_dpd_app.factory.create_shipping_method_factory" />
            <argument type="service" id="bitbag.shopware_dpd_app.service.client_api_service" />
            <argument type="service" id="bitbag.shopware_dpd_app.factory.create_custom_field_factory" />

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
